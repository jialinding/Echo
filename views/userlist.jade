extends layout

block content
	table#table-users
			thead
				tr
					td User
					td Email
					td Profile
			tbody
				each u, i in users
					tr
						td #{u.facebook.name}
						if u.local.email
							td #{u.local.email}
						else
							td #{u.facebook.email}
						td
							a(href='/u/' + u._id) Profile