extends layout

block content
	#info
		form#form-add-event(name='addevent')
			input#input-title(type='text', placeholder='event', name='title')
			br
			input#input-location(type='text', placeholder='location', name='location')
			input#input-location-lat(type='hidden', name='lat')
			input#input-location-lng(type='hidden', name='lng')
			br
			input#input-start-time(type='text', placeholder='time', name='start-time')
			input#input-start-day(type='text', name='start-day', readonly='readonly')
			input#input-start-datetime(type='hidden', name='start-datetime')
			br
			textarea#input-description(placeholder='description', name='description')
			br
			button#btn-submit(type='submit') Submit

		h3 My Events
		table#table-events-created
			thead
				tr
					td Title
					td Location
					td Delete
			tbody

		h3 Events Attending
		table#table-events-attending
			thead
				tr
					td Title
					td Location
					td Unattend
			tbody

		h3 Events Available
		table#table-events-available
			thead
				tr
					td Title
					td Location
					td Attend
			tbody

	#map
		div#map-canvas(style='height: 100%; width: 100%')

	link(rel='stylesheet', href='/stylesheets/vendor/timepicker.css')
	script(src='/javascripts/index.js')
	script(src='/javascripts/vendor/timepicker.js')
	script(type='text/javascript').
		var events = !{JSON.stringify(events)}
		var user = !{JSON.stringify(user)}